<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_overviewtraining"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/txtview_overviewtrainingdetail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/create_training_listitem_textview_exercise_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

    <ListView
        android:id="@+id/listview_overviewtrainingdetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/txtview_overviewtrainingdetail_title"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_close_overviewtrainingdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/design_button_border_white"
        android:text="@string/fragment_overview_detail_button_close"
        android:textColor="@color/textcolor_blackwhite" />

</RelativeLayout>